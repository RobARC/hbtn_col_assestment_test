<h2>Welcome to Edit Orders</h2>
<br>

<div class="container" p-4>
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="cardbody">
                    <form action="/orders/edit/{{orders.orderid}}" method="POST">
                        <div class="form-group p-2">
                            <input type="text" class="form-control" name="name" placeholder="customer name" autofocus>
                        </div>
                        <div class="form-group p-2">
                            <input type="text" class="form-control" name="gov_id" placeholder="gov id">
                        </div>
                        <div class="form-group p-2">
                            <input type="date" value="{{orders.order_date}}" class="form-control" name="order_date">
                            <label>Order Date</label>
                        </div>
                        <div class="form-group p-2">
                            <input type="date" class="form-control" name="last_payment_date" placeholder="last payment date">
                            <label>Last Payment Date</label>
                        </div>
                        <div class="form-group p-2">
                            <input type="text" value="{{orders.paid}}" class="form-control" name="paid" placeholder="Paid">
                        </div>
                        <div class="form-group p-2">
                            <input type="text" class="form-control" name="address" placeholder="Address">
                        </div>
                        <div class="form-group p-2">
                            <input type="int" value="{{orders.subtotal}}" class="form-control" name="subtotal" placeholder="Subtotal">
                        </div>
                         <div class="form-group p-2">
                            <input type="int" value="{{orders.taxes}}" class="form-control" name="taxes" placeholder="Taxes">
                        </div>
                         <div class="form-group p-2">
                            <input type="int" value="{{orders.total}}" class="form-control" name="total" placeholder="Total">
                        </div>
                        <div class="form-group p-2">
                            <button class="btn btn-success btn-block">
                                Save
                            </button> 
                        </div>
                    </form>
                </div>
            </div>
        </div>  
    </div>
</div>